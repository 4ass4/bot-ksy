{
  "name": "telegram-raffle-bot",
  "version": "1.0.0",
  "description": "Telegram bot for organizing raffles with admin panel and subscription checking",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "migrate": "tsx src/database/migrate.ts",
    "test": "node test-bot.js",
    "debug": "node debug-bot.cjs",
    "test:bot": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "telegram",
    "bot",
    "raffle",
    "contest",
    "giveaway"
  ],
  "dependencies": {
    "grammy": "^1.19.2",
    "sqlite3": "^5.1.6",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}